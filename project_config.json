{
  "project_name": "ai_agentic_2025",
  "version": "1.0.0",
  "description": "AI代理项目",
  
  "communication": {
    "language": "zh-CN",
    "tone": "professional",
    "response_format": "structured"
  },
  
  "coding_standards": {
    "style_guide": "PEP 8",
    "naming_convention": "snake_case",
    "comment_style": "docstring",
    "indentation": 4,
    "comment_language": "en-US",
    "variable_naming": "en-US",
    "code_language": "en-US"
