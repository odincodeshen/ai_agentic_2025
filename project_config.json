    "add_requirements": true,
    "include_examples": true,
    "documentation_format": "markdown",
    "readme_language": "en-US",
    "code_documentation_language": "en-US",
    "program_output_language": "en-US"
  },
  
  "language_policy": {
    "conversation": "zh-CN",
    "code_comments": "en-US",
    "variable_names": "en-US",
    "function_names": "en-US",
    "readme_docs": "en-US",
    "technical_docs": "en-US",
    "program_output": "en-US"
  },
  
  "custom_rules": [
    "中文对话，英文代码和文档",
    "所有变量和函数名使用英文",
    "README文档使用英文",
    "代码文档使用英文",
    "程序输出使用英文"
  ]
} 